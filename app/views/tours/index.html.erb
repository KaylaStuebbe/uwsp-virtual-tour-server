<% provide(:title, 'Tours') %>
<h1>Tours</h1>
<p>Format: HTML | <%= link_to "XML", tours_path(:format => :xml) %> | <%= link_to "JSON", tours_path(:format => :json) %></p>

<table class="table table-striped tours-table">
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>POIs</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tours.each do |tour| %>
  <tr>
    <td><%= tour.name %></td>
    <td><%= tour.location %></td>
    <td><%= tour.pois.count %></td>
    <td><%= link_to 'Show', tour %></td>
    <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
    <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tour', new_tour_path, :class => 'btn' %>
